# Dockerfile for FastAPI AI Server

FROM python:3.11-slim

# 작업 디렉토리 설정
WORKDIR /app

# 시스템 패키지 업데이트 및 필요한 패키지 설치
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    && rm -rf /var/lib/apt/lists/*

# Python 의존성 파일 복사
COPY scripts/requirements.txt .

# Python 패키지 설치
RUN pip install --no-cache-dir -r requirements.txt

# OpenAI 버전 강제 다운그레이드 (호환성 문제 해결)
RUN pip install --no-cache-dir openai==0.28.1 --force-reinstall

# FastAPI 스크립트 복사
COPY scripts/ .

# 8000 포트 노출
EXPOSE 8000

# FastAPI 서버 실행
CMD ["python", "uvicorn_config.py"]
